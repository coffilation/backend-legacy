{
  "name": "coffpilation-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "prebuild": "rimraf dist",
    "start": "nest start",
    "ci:e2e": "export COMPOSE_FILE=.config/docker/e2e.yml && docker compose up -d && docker compose run --rm migrations && docker compose run --rm newman",
    "ci:prod": "docker image prune -a -f --filter \"until=24h\" && export COMPOSE_FILE=.config/docker/production.yml && docker compose run migrations && docker compose up -d",
    "ci:lint:eslint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "ci:lint:prettier": "prettier --list-different \"src/**/*.ts\"",
    "deploy:e2e": "export COMPOSE_FILE=.config/docker/e2e.deploy.yml && docker compose up -d && docker compose run --rm migrations && docker compose run --rm newman",
    "dev:docker": "docker compose up -d",
    "fix:lint:prettier": "prettier --write \"src/**/*.ts\"",
    "fix:lint:eslint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "orm:migration:create": "typeorm migration:create ./migrations/manual",
    "orm:migration:generate": "typeorm migration:generate ./migrations/generated -d ./.config/typeorm-data-source.js",
    "orm:migration:run": "typeorm migration:run -d ./.config/typeorm-data-source.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^2.1.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/jwt": "^8.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^8.2.2",
    "@nestjs/platform-fastify": "^8.4.7",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "^8.1.4",
    "@types/bcrypt": "^5.0.0",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "fastify-swagger": "^5.2.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/node": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
